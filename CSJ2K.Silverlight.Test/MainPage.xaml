<UserControl x:Class="SL.CSJ2K.Test.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel x:Name="LayoutRoot" Background="White">
        <Button Content="Select JP2 File" Click="ButtonBase_OnClick" HorizontalAlignment="Left" Padding="12,3" Margin="3"/>
        <Image x:Name="DecodedImage" Stretch="None" HorizontalAlignment="Left" Margin="3,0,3,3"/>
        <TextBlock FontSize="18" x:Name="ImageName" Margin="3,0"/>
    </StackPanel>
</UserControl>
